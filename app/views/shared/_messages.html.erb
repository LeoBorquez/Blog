<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= "#{name}" %>">
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      </div>
    <% end %>
  </div>
</div>
