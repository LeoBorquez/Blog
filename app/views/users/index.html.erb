<%= provide(:title, "All Users") %>

<h1 align="center">All Blog users</h1>

<div align="center">
  <%= will_paginate @user %>
  <% @user.each do |user| %>
    <ul class="listinig">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete user", user_path(@user), method: :delete, data: {confim: "Are you sure?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @user %>
</div>

